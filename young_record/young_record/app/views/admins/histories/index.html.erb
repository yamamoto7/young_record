<div class="wrapper">
    <select>
        <option>1 : 準備中</option>
        <option>2 : 発送中</option>
        <option>3 : 完了</option>
    </select>
    <input type="submit" value="絞り込み">
    <table>
        <tr>
            <th>日付</th>
            <th>時間</th>
            <th>発送ステータス</th>
            <th>氏名</th>
            <th></th>
        </tr>
        <% @histories.each do |h| %>
            <tr>
                <td><%= h.created_at.strftime('%Y/%m/%d') %></td>
                <td><%= h.created_at.strftime('%H:%M') %></td>
                <td>h.status</td>
                <td><%= link_to h.user.name_char, admins_user_path(h.user_id) %></td>
                <td><%= link_to "詳細", admins_history_path(h.id) %></td>
            </tr>
        <% end %>
    </table>
    <input type="submit" value="更新">
</div> 