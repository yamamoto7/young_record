<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <p>名前</p><br />
    <%= f.text_field :name_char, autofocus: true %>
  </div>

  <div class="field">
    <p>名前(カタカナ)</p><br />
    <%= f.text_field :name_kana, autofocus: "off" %>
  </div>

  <div class="field">
    <p>郵便番号</p><br />
    <%= f.text_field :post, autofocus: "off" %>
  </div>

  <div class="field">
    <p>住所</p><br />
    <%= f.text_field :address, autofocus: "off" %>
  </div>

  <div class="field">
    <p>電話番号</p><br />
    <%= f.text_field :tell, autofocus: "off" %>
  </div>

  <div class="field">
    <p>メールアドレス</p><br />
    <%= f.email_field :email, autofocus: "off", autocomplete: "email" %>
  </div>

  <div class="field">
    <p>パスワード</p>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <p>パスワード確認</p><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
