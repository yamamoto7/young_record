<!-- ユーザー履歴一覧 -->
<div class="wrapper">
    <table>
        <tr>
            <th>注文日</th>
            <th>合計</th>
            <th>商品名</th>
            <th>発送状況</th>
            <th></th>
        </tr>
        <% @histories.each do |h| %>
            <tr>
                <td><%= h.created_at.strftime('%Y/%m/%d %H:%M') %></td>
                <td><%= h.sum %></td>
                <td><%= h.items.name %></td>
                <td>
                    <% if h.status %>
                        <% if h.status == 1 %>
                            <%= "1.準備中" %>
                        <% elsif h.status == 2 %>
                            <%= "2.発送中" %>
                        <% elsif h.status == 3 %>
                            <%= "3.発送済" %>
                        <% end %>
                    <% else %>
                        <%= "1.準備中" %>
                    <% end %>
                </td>
                <td><%= link_to "詳細", users_history_path(h.id) %></td>
            </tr>
        <% end %>
    </table>
</div>