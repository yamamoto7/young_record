<main>
    <div class="wrapper clearfix">
    <div class="box-div-40 show-image">
        <%= attachment_image_tag(@item, :image, fallback: "no_image.jpg") %>

    </div>
    <div class="box-div-60 show-info">
        <h3>きゃりーベストアルバム</h3>
        <table>
            <tr>
                <td>artist</td>
                <td><%= @item.artist_name %></td>
            </tr>
            <tr>
                <td>label</td>
                <td><%= @item.label_name %></td>
            </tr>
            <tr>
                <td>price</td>
                <td><%= @item.price %></td>
            </tr>
        </table>
        <div class="show-add-btn">add to cart</div>
    </div>
    </div>

    <% @item.cds.each do |f| %>
    <div class="wrapper clearfix">
        <div class="box-div-30">
            <div><%= f.name %></div>
        </div>

        <div class="box-div-70">
            <table class="show-table">
                <tr>
                    <td>song name</td>
                    <td>artist</td>
                </tr>
                <% f.songs.each do |g| %>
                    <tr>
                        <td><%= g.name %></td>
                        <td><%= g.artist_name %></td>
                    </tr>
                <% end %>
            </table>
        </div>
    </div>
    <% end %>
</main>