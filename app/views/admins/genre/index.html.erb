<div class="wrapper">
    <h3>ジャンル一覧</h3>

    <table>
        <tr>
            <th>詳細</th>
            <th>名称変更</th>
            <th></th>
        </tr>
        <% @genres.each do |genre| %>
	        <tr>
	            <td><%= link_to genre.name, admins_genre_path(genre.id) %></td>
                <%= form_for genre do |f| %>
    	            <td><%= f.text_field :name %></td>
                    <td><%= f.submit '変更を保存' %></td>
                <% end %>
	        </tr>
		<% end %>

    </table>
</div>